[Trigger]
Operation = Upgrade
Operation = Install
Operation = Remove
Type = Path
Target = usr/lib/modules/*/vmlinuz

[Action]
Depends = rsync
Description = Backing up pre /efi...
When = PreTransaction
Exec = /usr/bin/bash -c 'rsync -a --mkpath --delete /efi/ "/.efibackup/$(date +%Y_%m_%d_%H.%M.%S)_pre"/'
